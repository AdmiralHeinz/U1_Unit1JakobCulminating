<Window x:Class="canvasImage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:canvasImage"
        mc:Ignorable="d"
        Title="MainWindow" Height="560" Width="640">
    <Canvas>
        <Canvas
            x:Name="canvas" Width="640" Height="480" Background="#FFF9FDD2"
            Canvas.Left="0"
            Canvas.Top="0"
            />
        <Button
            x:Name="btnGetFile"
            Content="Get File"
            FontSize="24"
            Background="Blue"
            Foreground="White"
            Click="btnGetFile_Click"
            Width="173"
            Height="35" Canvas.Left="467" Canvas.Top="485"
            />
    </Canvas>

</Window>